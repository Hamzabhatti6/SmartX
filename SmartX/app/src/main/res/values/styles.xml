<resources xmlns:tools="http://schemas.android.com/tools">



<!--     Text styles-->

    <style name="inputField" >
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/input</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
<!--        <item name="android:background">@drawable/round_text_input_layout_corner</item>-->

    </style>



    <style name="headingH1" >
        <item name="fontFamily">@font/robotobold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/heading</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="text" >
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textCursorDrawable">@null</item>

    </style>
    <style name="text_bold" >
        <item name="fontFamily">@font/robotobold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_bold</item>
    </style>

    <style name="button" >
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttons</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_enable</item>
    </style>


</resources>
